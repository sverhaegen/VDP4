{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Start Frontend & Backend",
      "configurations": [
        "Frontend build watch",
        "Frontend start live-server",
        "Backend build watch",
        "Backend start nodemon"
      ],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": "Frontend build watch",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "cwd": "${workspaceRoot}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "build:watch"],
      "presentation": {
        "hidden": false,
        "group": "Frontend",
        "order": 1
      }
    },
    {
      "name": "Frontend start live-server",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "cwd": "${workspaceRoot}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start:dev"],
      "presentation": {
        "hidden": false,
        "group": "Frontend",
        "order": 2
      }
    },
    {
      "name": "Backend build watch",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "cwd": "${workspaceRoot}/backend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "build:watch"],
      "presentation": {
        "hidden": false,
        "group": "Backend",
        "order": 1
      }
    },
    {
      "name": "Backend start nodemon",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "cwd": "${workspaceRoot}/backend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start:dev"],
      "presentation": {
        "hidden": false,
        "group": "Backend",
        "order": 2
      }
    }
  ]
}
